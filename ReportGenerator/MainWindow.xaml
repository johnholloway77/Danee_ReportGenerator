<Window x:Class="ReportGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReportGenerator"
        mc:Ignorable="d"
        Title="Report Generator" Height="500" Width="800">



    <DockPanel Margin="0,0,0,0">
        <Menu DockPanel.Dock="Top" RenderTransformOrigin="0.504,1.088">
            <MenuItem Header="_File" Height="34" Width="68">
                <MenuItem Header="_Open" Click="btnOpenFile_Click" />
                <MenuItem Header="_Save" Click="btnSaveFile_Click" />
                <Separator />
                <MenuItem Header="_Exit" />
            </MenuItem>
        </Menu>
        <TextBlock x:Name="MyTextBlock" Text="Please load Excel File" TextAlignment="Center"
                   FontWeight="Bold" FontSize="14" VerticalAlignment="Bottom" Height="26"  />


    </DockPanel>



</Window>

    